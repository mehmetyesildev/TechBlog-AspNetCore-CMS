@model IEnumerable<AppRole>

    <div class="row">
        <div class="col-md-12">

            <div class="card shadow-sm border-0 rounded-3 mt-4">

                <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 text-primary fw-bold">
                        <i class="bi bi-shield-lock-fill me-2"></i>Rol Yönetimi
                    </h5>
                    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
                        <i class="bi bi-plus-lg me-1"></i> Yeni Rol Ekle
                    </a>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 text-secondary small text-uppercase border-0 py-3">#Id</th>
                                    <th class="text-secondary small text-uppercase border-0">Rol Adı</th>
                                    <th class="text-secondary small text-uppercase border-0">Kullanıcılar</th>
                                    <th class="text-end pe-4 text-secondary small text-uppercase border-0"
                                        style="width: 150px;">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Any())
                                {
                                <tr>
                                    <td colspan="4" class="text-center py-5">
                                        <div class="text-muted">
                                            <i class="bi bi-emoji-frown display-4 d-block mb-3"></i>
                                            <h6>Henüz hiç rol tanımlanmamış.</h6>
                                            <p class="small">Yeni bir rol ekleyerek başlayabilirsiniz.</p>
                                        </div>
                                    </td>
                                </tr>
                                }
                                else
                                {
                                @foreach (var role in Model)
                                {
                                <tr>
                                    <td class="ps-4 fw-bold text-muted">@role.Id</td>
                                    <td>
                                        <span
                                            class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">
                                            <i class="bi bi-tag-fill me-1"></i> @role.Name
                                        </span>
                                    </td>

                                    <td asp-role-users="@role.Id"></td>

                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a asp-action="Edit" asp-route-id="@role.Id"
                                                class="btn btn-sm btn-outline-warning rounded-2"
                                                data-bs-toggle="tooltip" title="Düzenle">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>

                                            <form asp-action="Delete" asp-route-id="@role.Id" method="post"
                                                onsubmit="return confirm('@role.Name rolünü silmek istediğinize emin misiniz?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger rounded-2"
                                                    data-bs-toggle="tooltip" title="Sil">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer bg-white border-top py-3">
                    <small class="text-muted">Toplam <strong>@Model.Count()</strong> rol listeleniyor.</small>
                </div>

            </div>
        </div>
    </div>