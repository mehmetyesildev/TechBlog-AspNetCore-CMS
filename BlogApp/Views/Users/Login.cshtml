@model LoginViewModel

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6 col-lg-4">

        <div class="card border-0 shadow-lg rounded-4">
            <div class="card-body p-4 p-md-5">

                <div class="text-center mb-4">
                    <div class="bg-primary bg-opacity-10 text-primary d-inline-flex align-items-center justify-content-center rounded-circle mb-3"
                        style="width: 80px; height: 80px;">
                        <i class="bi bi-person-fill display-4"></i>
                    </div>
                    <h2 class="fw-bold text-dark">Hoş Geldiniz</h2>
                    <p class="text-secondary small">Devam etmek için lütfen giriş yapın.</p>
                </div>

                <form action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 text-center small">
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold small text-muted">E-POSTA ADRESİ</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-secondary">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input asp-for="Email" class="form-control border-start-0 bg-light"
                                placeholder="ornek@mail.com">
                        </div>
                        <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="form-label fw-bold small text-muted">ŞİFRE</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-secondary">
                                <i class="bi bi-key"></i>
                            </span>
                            <input asp-for="Password" type="password" class="form-control border-start-0 bg-light"
                                placeholder="******">
                        </div>
                        <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                        
                        <div class="d-flex justify-content-end mt-2">
                            <a href="/Users/ForgotPassword" class="text-muted small text-decoration-none hover-primary">
                                <i class="bi bi-question-circle me-1"></i>Şifremi Unuttum?
                            </a>
                        </div>
                        </div>

                    <div class="d-grid mb-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm fw-bold hover-scale">
                            Giriş Yap
                        </button>
                    </div>

                    <div class="text-center">
                        <p class="text-muted small mb-0">Hesabınız yok mu?
                            <a href="/users/register" class="text-primary fw-bold text-decoration-none hover-underline">
                                Hemen Kayıt Olun
                            </a>
                        </p>
                    </div>

                </form>
            </div>
        </div>

        <div class="text-center mt-4 text-muted small">
            &copy; 2025 BlogApp. Tüm hakları saklıdır.
        </div>

    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }
    .hover-scale {
        transition: transform 0.2s ease;
    }

    .hover-scale:hover {
        transform: scale(1.02);
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #0d6efd;
        background-color: #fff;
    }

    .input-group:focus-within .input-group-text {
        border-color: #0d6efd;
        background-color: #fff;
    }

    .input-group:focus-within .form-control {
        border-color: #0d6efd;
    }

    .hover-underline:hover {
        text-decoration: underline !important;
    }

    /* Yeni eklenen hover efekti */
    .hover-primary:hover {
        color: #0d6efd !important; /* Bootstrap primary color */
        text-decoration: underline !important;
    }
</style>