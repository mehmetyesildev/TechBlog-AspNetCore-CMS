@model ResetPasswordModels

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-5">

                    <div class="text-center mb-4">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                            style="width: 60px; height: 60px;">
                            <i class="bi bi-key-fill fs-3"></i>
                        </div>
                        <h2 class="fw-bold text-primary">Şifreni Sıfırla</h2>
                        <p class="text-muted small">Lütfen yeni şifrenizi belirleyin.</p>
                    </div>

                    <form asp-action="ResetPassword" method="post">

                        <div asp-validation-summary="All"
                            class="text-danger small mb-3 bg-danger bg-opacity-10 p-2 rounded-2 border border-danger border-opacity-25"
                            style="list-style: none;"></div>

                        <input type="hidden" asp-for="Token" />

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-secondary small fw-bold">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg bg-light border-0"
                                placeholder="Email@info.com" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-secondary small fw-bold">Yeni Şifre</label>
                            <input asp-for="Password" class="form-control form-control-lg bg-light border-0"
                                placeholder="Yeni şifreniz" />
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label text-secondary small fw-bold">
                                Şifre Tekrar
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg bg-light border-0"
                                placeholder="Şifrenizi tekrar girin" />
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold shadow-sm rounded-pill">
                            <i class="bi bi-check-lg me-2"></i>Şifreyi Güncelle
                        </button>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .validation-summary-valid {
        display: none !important;
    }
</style>