@model IEnumerable<User>

    <div class="card shadow-sm border-0 rounded-3 mt-4">

        <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">

            <h5 class="card-title mb-0 text-primary fw-bold">
                <i class="bi bi-people-fill me-2"></i>Kullanıcı Listesi
            </h5>

            <a asp-controller="Users" asp-action="Register" class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm">
                <i class="bi bi-person-plus-fill me-2"></i>Yeni Kullanıcı
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="py-3 ps-4 text-uppercase text-secondary small fw-bold">Id</th>
                        <th class="py-3 text-uppercase text-secondary small fw-bold">Name</th>
                        <th class="py-3 text-uppercase text-secondary small fw-bold">Email</th>
                        <th class="py-3 text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                    <tr>
                        <td class="ps-4 text-muted small">@user.Id</td>

                        <td class="fw-semibold text-dark">
                            <span class="d-inline-block text-truncate" style="max-width: 150px;">
                                @user.Name
                            </span>
                        </td>

                        <td class="text-secondary">@user.Email</td>

                        <td class="text-end pe-4">
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-primary btn-sm rounded-pill px-3 me-1">
                                Edit
                            </a>
                            <form asp-action="Delete" method="post" onsubmit="return confirm('@user.Name silmek iştediğinize misiniz?')" style="display: inline-block;">
                                <input type="hidden" value="@user.Id" name="id" >
                                <button type="submit"  class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                    Delete
                                </button>
                            </form>
                            
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>