@model Post

<div class="row">
    <div class="col-lg-8">

        <div class="bg-white p-4 p-lg-5 rounded-4 shadow-sm border mb-5">

            <div class="tags mb-3">
                @foreach(var tag in Model.Tags)
                {
                <a href="/posts/tag/@tag.Url"
                    class="badge rounded-pill bg-light text-primary border border-primary-subtle text-decoration-none px-3 py-2 me-1 hover-badge">
                    #@tag.Text
                </a>
                }
            </div>

            <h1 class="display-6 fw-bold mb-4 text-dark">@Model.Title</h1>

            <div class="d-flex align-items-center mb-4 pb-4 border-bottom">
                <a href="/profile/@Model.User.UserName">
                    <img src="/img/@Model.User.Image" class="rounded-circle border p-1" width="50" height="50"
                        alt="@Model.User.Name">
                </a>
                <div class="ms-3">
                    <h6 class="mb-0 fw-bold">
                        <a href="/profile/@Model.User.UserName"
                            class="text-dark text-decoration-none">@Model.User.Name</a>
                    </h6>
                    <small class="text-muted">
                        <i class="bi bi-calendar-event me-1"></i> @Model.Publishedon.ToString("d MMMM yyyy")
                    </small>
                </div>
            </div>

            <div class="mb-5 overflow-hidden rounded-4 shadow-sm">
                <img src="/img/@Model.Image" class="img-fluid w-100 object-fit-cover" style="max-height: 500px;"
                    alt="@Model.Title">
            </div>

            <div class="post-content lh-lg fs-5 text-secondary">
                @Html.Raw(@Model.Content)
            </div>

        </div>

        <div class="bg-white p-4 p-lg-5 rounded-4 shadow-sm border">

            <div class="d-flex align-items-center justify-content-between mb-4">
                <h4 class="fw-bold m-0">
                    <i class="bi bi-chat-dots-fill text-primary me-2"></i>Yorumlar
                    <span class="badge bg-primary rounded-pill fs-6 align-middle ms-2"
                        id="commentCountBadge">@Model.Comments.Count()</span>
                </h4>
            </div>

            <div id="comments">
                @foreach(var comment in Model.Comments)
                {
                <div class="d-flex mb-4 fade-in">
                    <div class="flex-shrink-0">
                        <img src="/img/@comment.User.Image" class="rounded-circle shadow-sm" width="50" height="50"
                            alt="@comment.User.UserName">
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="bg-light p-3 rounded-4 rounded-top-0 border">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="fw-bold mb-0 text-primary">
                                    <a href="/profile/@comment.User.UserName"
                                        class="text-decoration-none">@comment.User.UserName</a>
                                </h6>
                                <small class="text-muted"
                                    style="font-size: 0.75rem;">@comment.PublishedOn.ToString("g")</small>
                            </div>
                            <p class="mb-0 text-dark">@comment.Text</p>
                        </div>
                    </div>
                </div>
                }
            </div>

            @if(User.Identity!.IsAuthenticated)
            {
            <hr class="my-5 border-secondary-subtle">
            <div class="comment-form">
                <h5 class="fw-bold mb-3">Bir Yorum Bırak</h5>
                <form id="commentForm">
                    <input type="hidden" id="PostId" name="postId" value="@Model.PostId">

                    <div class="form-floating mb-3">
                        <textarea class="form-control bg-light" placeholder="Yorumunuzu buraya yazın..." id="Text"
                            name="Text" style="height: 100px"></textarea>
                        <label for="Text">Düşüncelerin neler?</label>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button id="btnYorumKayit" type="submit"
                            class="btn btn-primary px-4 py-2 rounded-pill fw-bold shadow-sm">
                            <i class="bi bi-send-fill me-2"></i>Gönder
                        </button>
                    </div>
                </form>
            </div>
            }
            else
            {
            <div class="alert alert-warning border-0 shadow-sm rounded-3 d-flex align-items-center mt-4" role="alert">
                <i class="bi bi-exclamation-circle-fill fs-4 me-3"></i>
                <div>
                    Yorum yapmak için lütfen <a href="/users/login" class="alert-link fw-bold">giriş yapın</a> veya <a
                        href="/users/register" class="alert-link fw-bold">kayıt olun</a>.
                </div>
            </div>
            }
        </div>

    </div>

    <div class="col-lg-4">
        <div class="sticky-top" style="top: 2rem; z-index: 10;">
            <vc:tags-menu></vc:tags-menu>
            <vc:new-post></vc:new-post>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://code.jquery.com/jquery-3.7.1.min.js"
    integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnYorumKayit").click(function (e) {
            e.preventDefault(); // Formun normal submit olmasını engelle

            var btn = $(this);
            var originalText = btn.html();

            // Yorum boşsa gönderme
            if (!$('#Text').val().trim()) {
                $('#Text').focus();
                return;
            }

            // Butonu Yükleniyor Moduna Al
            btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Gönderiliyor...');

            $.ajax({
                type: 'POST',
                url: '@Url.Action("AddComment")',
                dataType: 'json',
                data: {
                    PostId: $('#PostId').val(),
                    Text: $('#Text').val()
                },
                success: function (yorum) {
                    var date = new Date(yorum.publishedOn);

                    // Yeni yorum HTML'i (Modern Tasarım)
                    var newCommentHtml = `
                            <div class="d-flex mb-4 fade-in">
                                <div class="flex-shrink-0">
                                     <img src="/img/${yorum.avatar}" class="rounded-circle shadow-sm" width="50" height="50">
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <div class="bg-light p-3 rounded-4 rounded-top-0 border">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <h6 class="fw-bold mb-0 text-primary">${yorum.userName}</h6>
                                            <small class="text-muted" style="font-size: 0.75rem;">${date.toLocaleDateString()} ${date.toLocaleTimeString()}</small>
                                        </div>
                                        <p class="mb-0 text-dark">${yorum.text}</p>
                                    </div>
                                </div>
                            </div>
                        `;

                    $("#comments").append(newCommentHtml);

                    // Formu Temizle
                    $("#Text").val('');

                    // Yorum Sayısını Güncelle
                    var countBadge = $("#commentCountBadge");
                    var count = parseInt(countBadge.text());
                    countBadge.text(count + 1);

                    // Butonu Eski Haline Getir
                    btn.prop('disabled', false).html(originalText);
                },
                error: function () {
                    alert("Yorum gönderilirken bir hata oluştu.");
                    btn.prop('disabled', false).html(originalText);
                }
            });
        });
    });
</script>
}

<style>
    .hover-badge:hover {
        background-color: #0d6efd !important;
        color: white !important;
        border-color: #0d6efd !important;
    }

    .object-fit-cover {
        object-fit: cover;
    }

</style>