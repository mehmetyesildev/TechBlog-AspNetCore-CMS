@model PostCreateViewModel

<form action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="PostId">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold m-0">
            <i class="bi bi-pencil-square me-2"></i>Yazıyı Düzenle
        </h2>
        <a href="/posts/list" class="btn btn-outline-secondary btn-sm shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    <div class="row">
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-body p-4">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

                    <div class="mb-4">
                        <label asp-for="Title" class="form-label fw-bold text-dark">Başlık</label>
                        <input asp-for="Title" class="form-control form-control-lg bg-light"
                            placeholder="Yazı başlığı...">
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-bold text-dark">Kısa Açıklama</label>
                        <textarea asp-for="Description" class="form-control bg-light" rows="2"
                            placeholder="Kısa özet..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Content" class="form-label fw-bold text-dark">İçerik Detayı</label>
                        <textarea asp-for="Content" class="form-control"></textarea>
                        <span asp-validation-for="Content" class="text-danger small"></span>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="sticky-top" style="top: 2rem; z-index: 10;">

                <div class="card border-0 shadow-sm rounded-4 mb-3">
                    <div class="card-header bg-white fw-bold py-3 border-bottom-0">
                        <i class="bi bi-gear-fill me-2 text-primary"></i>Yayın Ayarları
                    </div>
                    <div class="card-body">

                        <div class="mb-3">
                            <label asp-for="Url" class="form-label small fw-bold text-muted">Bağlantı Adresi
                                (Slug)</label>
                            <input asp-for="Url" class="form-control form-control-sm">
                            <span asp-validation-for="Url" class="text-danger small"></span>
                        </div>

                        @if(User.FindFirstValue(ClaimTypes.Role) == "admin")
                        {
                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsActive" class="form-check-input" role="switch"
                                id="flexSwitchCheckChecked">
                            <label class="form-check-label small fw-bold" for="flexSwitchCheckChecked">Yazıyı
                                Yayınla</label>
                        </div>
                        }

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary fw-bold shadow-sm">
                                <i class="bi bi-save me-2"></i>Değişiklikleri Kaydet
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-header bg-white fw-bold py-3 border-bottom-0">
                        <i class="bi bi-tags-fill me-2 text-primary"></i>Etiketler
                    </div>
                    <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                        <div class="d-flex flex-column gap-2">
                            @foreach(var tag in ViewBag.Tags)
                            {
                            <div class="form-check custom-checkbox-card p-2 rounded border hover-bg">
                                <input class="form-check-input ms-1" name="tagIds" type="checkbox" value="@tag.TagId"
                                    id="tag_@tag.TagId" @(Model.Tags.Any(i=> i.TagId == tag.TagId) ? "checked" : "")>

                                <label class="form-check-label w-100 cursor-pointer ps-2 fw-medium text-secondary"
                                    for="tag_@tag.TagId">
                                    @tag.Text
                                </label>
                            </div>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
<script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/7.9.1/tinymce.min.js" referrerpolicy="no-referrer"></script>
<script>
    tinymce.init({
        selector: '#Content',
        height: 500,
        menubar: false,
        plugins: 'link image code lists',
        toolbar: 'undo redo | styles | bold italic | alignleft aligncenter alignright | bullist numlist | link image'
    })
</script>
}

<style>
    .hover-bg {
        transition: background-color 0.2s;
    }

    .hover-bg:hover {
        background-color: #f8f9fa;
        border-color: #0d6efd !important;
    }

    .cursor-pointer {
        cursor: pointer;
    }

 
    .form-control:focus {
        box-shadow: none;
        border-color: #0d6efd;
    }

    .form-check-input:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
</style>